<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport"
		  content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ title }}</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700,800&amp;subset=cyrillic" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css?{{ date().getTime() }}">
    <style>
            #preloader {
              position: fixed;
              z-index: 9999;
              top: 0;
              left: 0;
              right: 0;
              bottom: 0;
              background-color: #016990;
            }
    </style>
    <noscript>
        <style>
            .preloader {
                display: none;
            }
        </style>
    </noscript>
</head>
<body>
<div id="preloader"></div>

{% set title = "KTC" %}

{% include "tpl/inc/header.twig" %}

<div class="wrapper">
    {% block content %}{% endblock %}
</div>

{% include 'tpl/inc/footer.twig' %}

<script src="js/index.js?{{ date().getTime() }}"></script>
<script>
        var map;
        var myLatLng = {lat: 55.75694, lng: 37.6094};

        function initMap() {
          map = new google.maps.Map(document.getElementById('ctp-map'), {
            center: {lat: 55.75694, lng: 37.60946},
            zoom: 18,
            disableDefaultUI: true
          });

          var image = {
            url: 'images/content/i-marker-2x.png',
            size: new google.maps.Size(86, 120),
            // The origin for this image is (0, 0).
            origin: new google.maps.Point(0, 0),
            // The anchor for this image is the base of the flagpole at (0, 32).
            anchor: new google.maps.Point(0, 60),
            scaledSize: new google.maps.Size(43, 60)
          }

          var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            icon: image
          });
        }
      </script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyANLiSH02TkHWQS0F-SxzhweJg_zcq-IA4&callback=initMap" async defer></script>
</body>
</html>
